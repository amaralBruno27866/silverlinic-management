{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build C++ Project",
			"type": "shell",
			"command": "g++",
			"args": [
				"-std=c++17",
				"-I${workspaceFolder}/include",
				"-I/usr/include/c++/13",
				"-I/usr/include/x86_64-linux-gnu/c++/13",
				"${workspaceFolder}/src/*.cpp",
				"-o",
				"${workspaceFolder}/build/SilverClinic",
				"-lsqlite3"
			],
			"group": "build",
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}